<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="TopicDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/TopicDialogAnimation</item>
    </style>

    <style name="TopicDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_animation</item>
    </style>

</resources>
